<?xml version="1.0" encoding="utf-8"?>
<org.tvbrowser.view.GrowingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:id="@id/running_list_channel_info"
     android:layout_width="100dp"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_alignParentStart="true"
     android:layout_alignParentLeft="true"
     android:gravity="center_vertical"
     android:paddingTop="2dp"
     android:paddingBottom="2dp">
	<ImageView 
     	android:id="@id/running_list_channel_logo"
    	android:layout_width="100dp"
    	android:scaleType="center"
    	android:layout_height="wrap_content"
        android:contentDescription="@string/channel_logo_content_description"
     	/>
     <TextView
	        android:id="@id/running_compact_channel_label"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/title_font_size"
	        android:gravity="center_horizontal"
	        />
 	</LinearLayout>
    <!-- <TextView
        android:id="@id/running_compact_channel_label"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/title_font_size"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
	    android:layout_marginTop="3dp"
	    android:layout_marginBottom="3dp"
        />-->
   	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/running_list_channel_info"
	    android:layout_alignParentTop="true"
	    android:orientation="horizontal"
	    android:baselineAligned="false"
	    >
    	<View android:id="@id/running_separator_0"
	    android:layout_width="1dp"
	    android:layout_height="match_parent"
	    android:background="@color/running_separator_color"
	    />
	    <RelativeLayout android:id="@id/running_compact_previous"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
		    android:layout_weight="0.33"
	        >
			<TextView 
			    android:id="@id/running_compact_previous_start"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:textSize="@dimen/title_font_size"
			    android:layout_marginRight="5dp"
			    android:layout_marginLeft="2dp"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"/>
			<TextView 
			    android:id="@id/running_compact_previous_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/title_font_size"
			    android:layout_marginRight="2dp"
			    android:layout_toRightOf="@id/running_compact_previous_start"
			    android:layout_alignParentTop="true"/>
			<TextView 
			    android:id="@id/running_compact_previous_infos"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/info_font_size"
			    android:textStyle="normal"
			    android:layout_marginRight="2dp"
			    android:layout_toRightOf="@id/running_compact_previous_start"
			    android:layout_below="@id/running_compact_previous_title"
		        />
			<TextView 
			    android:id="@id/running_compact_previous_episode"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/episode_font_size"
			    android:textStyle="italic"
			    android:layout_marginRight="2dp"
			    android:layout_toRightOf="@id/running_compact_previous_start"
			    android:layout_below="@id/running_compact_previous_infos"
		        />
		</RelativeLayout>
		<View android:id="@id/running_separator_1"
		    android:layout_width="1dp"
		    android:layout_height="match_parent"
		    android:background="@color/running_separator_color"
		    />
	    <RelativeLayout android:id="@id/running_compact_now"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="5dp"
		    android:layout_weight="0.33"
		    >
			
			<TextView 
			    android:id="@id/running_compact_now_start"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:textStyle="bold"
			    android:textSize="@dimen/title_font_size"
			    android:layout_marginRight="5dp"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"
			    />
			<TextView 
			    android:id="@id/running_compact_now_title"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textStyle="bold"
			    android:textSize="@dimen/title_font_size"
			    android:layout_marginRight="2dp"
			    android:layout_toRightOf="@id/running_compact_now_start"
			    android:layout_alignParentTop="true"
				/>
			<TextView 
			    android:id="@id/running_compact_now_infos"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/info_font_size"
			    android:textStyle="normal"
			    android:layout_marginRight="2dp"
			    android:layout_toRightOf="@id/running_compact_now_start"
			    android:layout_below="@id/running_compact_now_title"
		        />
			<TextView 
			    android:id="@id/running_compact_now_episode"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/episode_font_size"
			    android:textStyle="italic"
			    android:layout_marginRight="2dp"
			    android:layout_toRightOf="@id/running_compact_now_start"
			    android:layout_below="@id/running_compact_now_infos"
			    />
		</RelativeLayout>
		<View android:id="@id/running_separator_2"
		    android:layout_width="1dp"
		    android:layout_height="match_parent"
		    android:background="@color/running_separator_color"
		    />
	    <RelativeLayout android:id="@id/running_compact_next"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.33"
		    >
			<TextView 
			    android:id="@id/running_compact_next_start"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:textSize="@dimen/title_font_size"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="5dp"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"
			    />
			<TextView 
			    android:id="@id/running_compact_next_title"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/title_font_size"
			    android:layout_marginRight="2dp"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@id/running_compact_next_start"
				/>
			<TextView 
			    android:id="@id/running_compact_next_infos"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/info_font_size"
			    android:textStyle="normal"
			    android:layout_marginRight="2dp"
			    android:layout_toRightOf="@id/running_compact_next_start"
			    android:layout_below="@id/running_compact_next_title"
		        />
			<TextView 
			    android:id="@id/running_compact_next_episode"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/episode_font_size"
			    android:textStyle="italic"
			    android:layout_marginRight="2dp"
			    android:layout_toRightOf="@id/running_compact_next_start"
			    android:layout_below="@id/running_compact_next_infos"
			    />
		</RelativeLayout>
	</LinearLayout>
</org.tvbrowser.view.GrowingRelativeLayout>
