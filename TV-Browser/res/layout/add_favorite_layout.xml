<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/favorite_search_label" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite_search"
        android:paddingRight="5dp"
        android:layout_alignBaseline="@+id/favorite_search_value"/>
    <EditText android:id="@+id/favorite_search_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/favorite_search_label"
        android:inputType="text"
        android:hint="@string/favorite_search_hint"
        
        />
    <TextView
        android:id="@+id/favorite_name_label" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite_name"
        android:paddingRight="5dp"
        android:layout_alignBaseline="@+id/favorite_name"
        android:layout_below="@+id/favorite_search_label"
        />
    <EditText android:id="@+id/favorite_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/favorite_name_label"
        android:inputType="text"
        android:hint="@string/favorite_name_hint"
        android:layout_below="@+id/favorite_search_value"
        />



    <CheckBox android:id="@+id/favorite_only_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/favorite_only_title"
        android:layout_below="@id/favorite_name"
        android:checked="true"/>
</RelativeLayout>
