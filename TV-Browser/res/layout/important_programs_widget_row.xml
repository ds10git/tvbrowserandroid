<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/important_programs_widget_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
	android:paddingBottom="2dp">
    <LinearLayout android:id="@+id/important_programs_widget_row_channel"
	    android:layout_width="92dp"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_centerVertical="true"
	    android:layout_alignParentStart="true"
	    android:layout_alignParentLeft="true" 
    	android:paddingTop="5dp"
		android:paddingBottom="5dp">
	    <ImageView 
	     	android:id="@+id/important_programs_widget_row_channel_logo1"
	    	android:layout_width="92dp"
	    	android:scaleType="center"
	    	android:contentDescription="image"
	    	android:layout_height="wrap_content"
	     	/>
	     <TextView
		        android:id="@+id/important_programs_widget_row_channel_name1"
		        android:layout_width="92dp"
		        android:layout_height="match_parent"
		        android:textSize="@dimen/title_font_size"
		        android:gravity="center_horizontal"
		        />
 	</LinearLayout>
	<RelativeLayout
	    android:id="@+id/important_programs_widget_row_program" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_toEndOf="@id/important_programs_widget_row_channel"
	    android:layout_toRightOf="@id/important_programs_widget_row_channel"
	    android:layout_marginLeft="2dp"
	    android:layout_marginStart="2dp"
	    android:layout_marginRight="3dp"
	    android:layout_marginEnd="3dp"
	    >
	    <ProgressBar 
	        android:id="@+id/important_programs_widget_row_progress"
	        style="@android:style/Widget.ProgressBar.Horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="3dp"
	        android:layout_marginTop="5dp"
	        android:layout_alignParentStart="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:visibility="gone"
	        />
	    <TextView android:id="@+id/important_programs_widget_row_start_date1"
	        android:textSize="@dimen/title_font_size"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentStart="true"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/important_programs_widget_row_progress"
	        />
	    <TextView android:id="@+id/important_programs_widget_row_start_time1"
	        android:textSize="@dimen/title_font_size"
	        android:textStyle="bold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginEnd="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_alignParentStart="true"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/important_programs_widget_row_start_date1"
	        />
	    <TextView android:id="@+id/important_programs_widget_row_title1"
	        android:textSize="@dimen/title_font_size"
	        android:textStyle="bold"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toEndOf="@id/important_programs_widget_row_start_time1"
	        android:layout_toRightOf="@id/important_programs_widget_row_start_time1"
	        android:layout_below="@id/important_programs_widget_row_start_date1"
	        />
	    <TextView android:id="@+id/important_programs_widget_row_categories"
	        android:textSize="@dimen/prog_list_categories_font_size"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toEndOf="@id/important_programs_widget_row_start_time1"
	        android:layout_toRightOf="@id/important_programs_widget_row_start_time1"
	        android:layout_below="@id/important_programs_widget_row_title1"
	        />
	    <TextView android:id="@+id/important_programs_widget_row_episode"
	        android:textSize="@dimen/episode_font_size"
	        android:textStyle="italic"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toEndOf="@id/important_programs_widget_row_start_time1"
	        android:layout_toRightOf="@id/important_programs_widget_row_start_time1"
	        android:layout_below="@id/important_programs_widget_row_categories"
	        />
	</RelativeLayout>
</RelativeLayout>
