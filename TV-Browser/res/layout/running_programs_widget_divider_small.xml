<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <RelativeLayout
         android:id="@+id/running_widget_header_wrapper"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/shape_button_background_corners_straight_transparency_high">
         <ImageButton android:id="@+id/running_widget_time"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:contentDescription="button"
	         android:layout_centerVertical="true"
	         android:src="@drawable/ic_action_schedule"
	         android:layout_alignParentEnd="true"
	         android:layout_alignParentRight="true"
	         android:background="@drawable/shape_button_background_corners_straight_transparency_high"/>
         <LinearLayout
             android:id="@+id/running_widget_header_info_wrapper"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:layout_centerVertical="true"
             android:layout_toStartOf="@id/running_widget_time"
	         android:layout_toLeftOf="@id/running_widget_time">
             <ImageView
	             android:id="@+id/running_widget_header_icon"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:contentDescription="TVB"
	             android:src="@drawable/ic_widget"
	             android:layout_marginEnd="3dp"
	             android:layout_marginRight="3dp"/>
		     <TextView android:id="@+id/running_widget_header"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:text="@string/widget_running_title"
		         android:gravity="center_vertical"
		         android:textSize="@dimen/title_font_size"/>
         </LinearLayout>
     </RelativeLayout>
    <ListView
        android:background="@drawable/shape_widget_background_corners_straight_transparency_medium"
        android:id="@+id/running_widget_list_view"
        android:layout_width="match_parent"
        android:dividerHeight="5dp"
        android:divider="@drawable/list_widgets_divider"
        android:layout_height="match_parent"
        android:layout_below="@id/running_widget_header_wrapper"/>
	<TextView
	    android:background="@drawable/shape_widget_background_corners_straight_transparency_medium"
	    android:id="@+id/running_widget_empty_text"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:textSize="@dimen/title_font_size"
	    android:padding="5dp"
	    android:gravity="center"
	    android:text="@string/widget_important_empty"
	    android:layout_below="@id/running_widget_header_wrapper"/>
</RelativeLayout>
