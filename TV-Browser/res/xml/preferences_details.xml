<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tvb="http://schemas.android.com/apk/res-auto" >
	<CheckBoxPreference android:key="@string/SHOW_PICTURE_IN_DETAILS" 
		android:title="@string/pref_show_pictures"
		android:defaultValue="@bool/show_picture_in_details_default"/>
	<ListPreference android:key="@string/DETAIL_PICTURE_DESCRIPTION_POSITION" 
		android:title="@string/pref_detail_picture_description_position"
		android:defaultValue="@string/detail_picture_description_position_default"
		android:entries="@array/pref_detail_picture_description_entries"
		android:entryValues="@array/pref_simple_string_value_array2"
		android:summary="%s"/>
	<CheckBoxPreference android:key="@string/SHOW_SORT_NUMBER_IN_DETAILS" 
		android:title="@string/show_sort_number"
		android:defaultValue="@bool/show_sort_number_in_details_default"/>
	<ListPreference android:key="@string/DETAIL_TEXT_SCALE"
		android:title="@string/pref_detail_text_scale"
		android:defaultValue="@string/detail_text_scale_default"
		android:entries="@array/text_scale_values_names"
		android:entryValues="@array/text_scale_value"
		android:summary="%s"/>
	<ListPreference android:key="@string/DETAIL_PICTURE_ZOOM"
		android:title="@string/pref_detail_picture_zoom"
		android:defaultValue="@string/detail_picture_zoom_default"
		android:entries="@array/picture_zoom_values_names"
		android:entryValues="@array/picture_zoom_values"
		android:summary="%s"/>
	<CheckBoxPreference android:key="@string/PREF_DETAIL_ALLOW_SWIPE" 
		android:title="@string/pref_detail_allow_swipe"
		android:summaryOn="@string/pref_detail_allow_swipe_summary_on"
		android:summaryOff="@string/pref_detail_allow_swipe_summary_off"
		android:defaultValue="@bool/pref_detail_allow_swipe"/>
	<org.tvbrowser.settings.PreferenceColorActivated
        android:key="@string/PREF_DETAIL_HIGHLIGHT_COLOR"
        android:title="@string/pref_detail_highlight_color"
        android:defaultValue="@color/pref_color_mark_favorite_tvb_style_default"
        tvb:alwaysActivated="true"/>
	<CheckBoxPreference android:key="@string/SHOW_GENRE_IN_DETAILS" 
		android:title="@string/pref_show_genre"
		android:defaultValue="@bool/show_genre_in_details_default"/>
	<CheckBoxPreference android:key="@string/SHOW_EPISODE_IN_DETAILS" 
		android:title="@string/pref_show_episode"
		android:defaultValue="@bool/show_episode_in_details_default"/>
	<CheckBoxPreference android:key="@string/SHOW_INFO_IN_DETAILS" 
		android:title="@string/pref_show_program_categories"
		android:defaultValue="@bool/show_info_in_details_default"/>
	<PreferenceScreen android:title="@string/pref_title_program_information_selection"
		android:summary="@string/pref_summary_program_information_selection">
		<CheckBoxPreference android:key="@string/SHOW_LINK_IN_DETAILS"
			android:title="@string/pref_show_link"
			android:defaultValue="@bool/show_link_in_details_default"/>
		<CheckBoxPreference android:key="details_actors"
			android:title="@string/actors"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_regie"
			android:title="@string/regie"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_customInfo"
			android:title="@string/customInfo"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_ageLimit"
			android:title="@string/ageLimit"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_nettoPlayTime"
			android:title="@string/nettoPlayTime"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_vps"
			android:title="@string/vps"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_script"
			android:title="@string/script"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_repetitionFrom"
			android:title="@string/repetitionFrom"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_music"
			android:title="@string/music"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_moderation"
			android:title="@string/moderation"
			android:defaultValue="true" />
		<CheckBoxPreference android:key="details_repetitionOn"
			android:title="@string/repetitionOn"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_seasonNumber"
			android:title="@string/seasonNumber"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_producer"
			android:title="@string/producer"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_camera"
			android:title="@string/camera"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_cut"
			android:title="@string/cut"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_otherPersons"
			android:title="@string/otherPersons"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_productionFirm"
			android:title="@string/productionFirm"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_ageLimitString"
			android:title="@string/ageLimitString"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_lastProductionYear"
			android:title="@string/lastProductionYear"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_series"
			android:title="@string/series"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_rating"
			android:title="@string/rating"
			android:defaultValue="true"/>
		<CheckBoxPreference android:key="details_additionalInfo"
			android:title="@string/additionalInfo"
			android:defaultValue="true"/>
	</PreferenceScreen>
</PreferenceScreen>
