<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tvb="http://schemas.android.com/apk/res/org.tvbrowser.tvbrowser" >
	<ListPreference
		android:key="@string/PREF_RUNNING_DIVIDER_SIZE"
		android:title="@string/divider_size"
		android:defaultValue="@string/pref_running_divider_size_default"
		android:entries="@array/divider_value_names"
		android:entryValues="@array/divider_values"
		android:summary="%s"/>
	<ListPreference android:key="@string/CHANNEL_LOGO_NAME_RUNNING"
		android:title="@string/show_logo_title"
		android:defaultValue="@string/channel_logo_name_running_default"
		android:entries="@array/show_logo_long"
		android:entryValues="@array/pref_simple_string_value_array4"
		android:summary="%s"/>
    <org.tvbrowser.settings.PreferenceColorActivated
        android:key="@string/PREF_RUNNING_TIME_SELECTION"
        android:title="@string/pref_running_time_selection"
        android:summary="@string/pref_running_time_selection_summary"
        android:defaultValue="@color/pref_color_running_time_selection_background_tvb_style_default"
        tvb:alwaysActivated="true"/>
    <CheckBoxPreference android:key="@string/RUNNING_PROGRAMS_NEXT_DAY"
        android:defaultValue="@bool/running_programs_next_day_default"
        android:title="@string/pref_running_next_day"
        android:summary="@string/pref_running_next_day_summary"/>
	<CheckBoxPreference android:key="@string/PREF_RUNNING_LIST_CLICK_TO_CHANNEL_TO_LIST" 
		android:title="@string/pref_program_lists_show_list_on_channel_click"
		android:summary="@string/pref_program_lists_show_list_on_channel_click_summary"
		android:defaultValue="@bool/pref_running_list_click_to_channel_to_list_default"/>
	<CheckBoxPreference android:key="@string/SHOW_EPISODE_IN_RUNNING_LIST" 
		android:title="@string/pref_show_episode"
		android:defaultValue="@bool/show_episode_in_running_list_default"/>
	<CheckBoxPreference android:key="@string/SHOW_INFO_IN_RUNNING_LIST" 
		android:title="@string/pref_show_program_categories"
		android:defaultValue="@bool/show_info_in_running_list_default"/>
	<CheckBoxPreference android:key="@string/SHOW_SORT_NUMBER_IN_RUNNING_LIST" 
		android:title="@string/show_sort_number"
		android:defaultValue="@bool/show_sort_number_in_running_list_default"/>
	<PreferenceCategory
	    android:title="@string/pref_time_buttons">
		<CheckBoxPreference android:key="@string/PREF_RUNNING_PROGRAMS_SHOW_NEXT_BUTTON" 
			android:title="@string/pref_running_show_next_button"
			android:summaryOn="@string/pref_running_show_next_button_summary_on"
			android:summaryOff="@string/pref_running_show_next_button_summary_off"
			android:defaultValue="@bool/pref_running_programs_show_next_button_default"/>
		<CheckBoxPreference android:key="@string/PREF_RUNNING_PROGRAMS_SHOW_TIME_PICK_BUTTON_ONLY_WHEN_NEEDED" 
			android:title="@string/pref_running_show_time_pick_button_only_when_needed_title"
			android:summaryOn="@string/pref_running_show_time_pick_button_only_when_needed_summary_on"
			android:summaryOff="@string/pref_running_show_time_pick_button_only_when_needed_summary_off"
			android:defaultValue="@bool/pref_running_programs_show_time_pick_button_only_when_needed_default"/>
	</PreferenceCategory>
</PreferenceScreen>
